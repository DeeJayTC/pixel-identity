@page "/roles/new"
@attribute [Authorize(Policy = Policies.CanManageRoles)]

@if (model != null)
{
    <MudText Typo="Typo.h4">Create New</MudText>
    <br />
    <MudPaper Elevation="4">
        <EditForm Model="@model" OnValidSubmit="AddRoleAsync">
            <FluentValidator />
            <MudCard>
                <MudCardContent>
                    <CascadingValue Value="model">
                        <RoleForm Dialog="Dialog"/>
                    </CascadingValue>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled"
                               Color="Color.Primary" Class="ml-auto">Create</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </MudPaper>
}
