@page "/scopes/new"
@attribute [Authorize(Policy = Policies.CanManageScopes)]

@if (scope != null)
{
    <MudText Typo="Typo.h4">Create New</MudText>
    <br />
    <MudPaper Elevation="4">
        <EditForm Model="@scope" OnValidSubmit="AddScopeAsync">
            <FluentValidator />
            <MudCard>
                <MudCardContent>
                    <CascadingValue Value="scope">
                        <ScopeForm Dialog="Dialog" />
                    </CascadingValue>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled"
                               Color="Color.Primary" Class="ml-auto">Create</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </MudPaper>
}