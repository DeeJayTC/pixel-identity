{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Plugins": {
    "Collection": [
      {
        "Type": "EmailSender",
        "Path": "Plugins\\Messenger",
